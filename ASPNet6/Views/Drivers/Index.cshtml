@model IEnumerable<ASPNet6.Models.Driver>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm())
{
    @Html.Label("Pretraži:")
    @Html.TextBox("search")
    <br />
    @Html.Label("Placa od")
    @Html.TextBox("salaryfrom")
    <br />
    @Html.Label("Placa do")
    @Html.TextBox("salaryto")
    <br />
    @Html.Label("Godine od")
    @Html.TextBox("agefrom")
    <br />
    @Html.Label("Godine do")
    @Html.TextBox("ageto")
    <br />
